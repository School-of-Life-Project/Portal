{
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "rpm", "appimage", "msi", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"webviewInstallMode": {
				"silent": true,
				"type": "embedBootstrapper"
			}
		},
		"macOS": {
			"minimumSystemVersion": "10.13"
		},
		"linux": {
			"appimage": {
				"bundleMediaFramework": true
			}
		},
		"publisher": "School of Life Project",
		"copyright": "Licensed under BSL-1.0",
		"category": "Education",
		"shortDescription": "An app built for independent learners."
	},
	"productName": "school-of-life-portal",
	"identifier": "com.schoolOfLifeProject.Portal",
	"plugins": {},
	"app": {
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": ["$APPDATA/User Resources/*/**"]
			}
		},
		"windows": [
			{
				"title": "Portal",
				"minWidth": 600,
				"minHeight": 400,
				"fullscreen": true
			}
		]
	}
}
